---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Your Company - Professional Services">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-brand-600 to-brand-800 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Professional Services That Deliver Results
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-brand-100 max-w-3xl mx-auto">
            We provide exceptional solutions tailored to your business needs. 
            Experience the difference of working with true professionals.
          </p>
          <div class="space-x-4">
            <a href="/contact" class="bg-white text-brand-600 hover:bg-gray-100 px-8 py-3 rounded-lg font-semibold text-lg transition-colors inline-block">
              Get Started Today
            </a>
            <a href="/about" class="border-2 border-white text-white hover:bg-white hover:text-brand-600 px-8 py-3 rounded-lg font-semibold text-lg transition-all inline-block">
              Learn More
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Value Propositions -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Why Choose Us
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Three key reasons why we're the right choice for your business
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Value Prop 1 -->
          <div class="text-center">
            <div class="bg-brand-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Fast & Reliable</h3>
            <p class="text-gray-600">
              Quick turnaround times without compromising on quality. 
              We deliver results when you need them.
            </p>
          </div>
          
          <!-- Value Prop 2 -->
          <div class="text-center">
            <div class="bg-brand-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Proven Results</h3>
            <p class="text-gray-600">
              Track record of successful projects and satisfied clients. 
              Your success is our success.
            </p>
          </div>
          
          <!-- Value Prop 3 -->
          <div class="text-center">
            <div class="bg-brand-500 text-white w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Expert Team</h3>
            <p class="text-gray-600">
              Experienced professionals who understand your industry 
              and deliver solutions that work.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-brand-600 text-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-xl mb-8 text-brand-100">
          Contact us today to discuss your project and see how we can help.
        </p>
        <a href="/contact" class="bg-white text-brand-600 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold text-lg transition-colors inline-block">
          Contact Us Now
        </a>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>